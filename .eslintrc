{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console": "error",
    "no-unreachable": "error",
    "no-unused-vars": "error",
    "no-multi-spaces": "error",
    "no-useless-catch": "error",
    "require-await": "error",
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "no-extra-boolean-cast": "off",
    "indent": ["error", 2]
  }
}
